#!/bin/bash
pkg=mpc
ver="${ver:-1.1.0}"
rel=1
grp=base
dep=(curl ca-bundle)
src=(http://ftp.gnu.org/gnu/libidn/libidn-${ver}.tar.gz)
sha=(ca91d22f017bfcb503d4bc3b44295491c89a33a3df0c3d8b8614f2d3831836eb)

_build() {
    curl -O -L https://ftp.gnu.org/gnu/mpc/mpc-${ver}.tar.gz
    tar xf ${pkg}-${ver}.tar.gz
    cd ${pkg}-${ver}
    ./configure --silent --prefix=$PREFIX --enable-shared --libdir=$PREFIX/lib --disable-assembly
    make -s install
}

_list() {
    hash -r
    echo ">> $pkg version"
    PKG_CONFIG_PATH=$PREFIX/lib/pkgconfig pkg-config --modversion $pkg
}
